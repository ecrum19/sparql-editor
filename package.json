{
  "name": "@sib-swiss/sparql-editor",
  "version": "0.1.6",
  "description": "A standard web components to easily deploy a SPARQL query editor for a specific SPARQL endpoint using the popular YASGUI editor.",
  "license": "MIT",
  "author": {
    "name": "Vincent Emonet",
    "email": "vincent.emonet@gmail.com"
  },
  "type": "module",
  "main": "dist/sparql-editor.min.js",
  "module": "dist/sparql-editor.js",
  "types": "dist/sparql-editor.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "vite",
    "demo": "npx http-server demo",
    "build": "vite build",
    "fmt": "prettier --write . && eslint . --fix --ignore-pattern dist/",
    "lint": "prettier --check . && eslint . --ignore-pattern dist/",
    "test": "npm run lint && vitest run",
    "release": "npm run lint && npm run build && npm publish",
    "prepare": "husky"
  },
  "dependencies": {
    "@zazuko/yasgui": "^4.3.2",
    "highlight.js": "^11.10.0",
    "mermaid": "^11.0.2",
    "sparqljs": "^3.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.1",
    "@types/sparqljs": "^3.1.11",
    "eslint": "^9.9.1",
    "husky": "^9.1.5",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": false,
    "bracketSpacing": false,
    "arrowParens": "avoid",
    "useTabs": false,
    "printWidth": 120
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "SPARQL",
    "editor",
    "YASGUI",
    "query",
    "semantic web",
    "RDF",
    "Linked Data"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sib-swiss/sparql-editor.git"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
